<table id="products" class="display">
  <thead>
  <tr>
    <th>Category</th>
    <th>Model</th>
    <th>SW Class</th>
    <th>Description</th>
    <th>SWA</th>
    <th>SPL</th>
    <th>Supplier</th>
    <th>PD Plan</th>
    <th>PD Actual</th>
    <th>VPD Plan</th>
    <th>VPD Actual</th>
    <th>AA Plan</th>
    <th>AA Actual</th>
    <th>PPC Plan</th>
    <th>PPPC Actual</th>
    <th>PV Plan</th>
    <th>PV Actual</th>
    <th>CR Plan</th>
    <th>CR Actual</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
<% @products.each do |product| %>
  <tr>
    <td><%= product.category.name %></td>
    <td><%= link_to product.model, product_path(product) %></td>
    <td><%= product.swclass_id %></td>
    <td><%= product.description %></td>
    <td><%= product.swa.name %></td>
    <td><%= product.spl.name %></td>
    <td><%= product.supplier.name %></td>
    <td><%= product.pd_plan %></td>
    <td><%= product.pd_actual %></td>
    <td><%= product.vpd_plan %></td>
    <td><%= product.vpd_actual %></td>
    <td><%= product.aa_plan %></td>
    <td><%= product.aa_actual %></td>
    <td><%= product.ppc_plan %></td>
    <td><%= product.ppc_actual %></td>
    <td><%= product.pv_plan %></td>
    <td><%= product.pv_actual %></td>
    <td><%= product.cr_plan %></td>
    <td><%= product.cr_actual %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
  </tr>
<% end %>
  </tbody>
</table>

