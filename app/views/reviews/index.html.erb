<h1>Listing reviews</h1>

<table id="reviews" class="display">
  <thead>
  <tr>
    <th>Product</th>
    <th>Milestone</th>
    <th>Reviewpurpose</th>
    <th>Planned date</th>
    <th>Actual date</th>
    <th>Reviewresult</th>
    <th>Comment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
<% @reviews.each do |review| %>
  <tr>
    <td><%= review.product_id %></td>
    <td><%= review.milestone_id %></td>
    <td><%= review.reviewpurpose_id %></td>
    <td><%= review.planned_date %></td>
    <td><%= review.actual_date %></td>
    <td><%= review.reviewresult_id %></td>
    <td><%= review.comment %></td>
    <td><%= link_to 'Show', review %></td>
    <td><%= link_to 'Edit', edit_review_path(review) %></td>
    <td><%= link_to 'Destroy', review, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
  </tbody>
</table>

